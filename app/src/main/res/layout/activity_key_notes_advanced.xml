<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wutka.basstools.KeyNotesAdvanced">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advancedKeyTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advancedTaskTextView"
        android:layout_below="@+id/advancedKeyTextView"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true">

        <TableRow android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textAllCaps="false"
            android:id="@+id/advancedButton1"
            android:onClick="handleNoteButtonClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textAllCaps="false"
            android:onClick="handleNoteButtonClick"

            android:id="@+id/advancedButton2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textAllCaps="false"
            android:onClick="handleNoteButtonClick"
            android:id="@+id/advancedButton3" />
        </TableRow>
        <TableRow android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textAllCaps="false"
            android:onClick="handleNoteButtonClick"
            android:id="@+id/advancedButton4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textAllCaps="false"
            android:onClick="handleNoteButtonClick"
            android:id="@+id/advancedButton5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textAllCaps="false"
            android:onClick="handleNoteButtonClick"
            android:id="@+id/advancedButton6" />

        </TableRow>
        <TableRow android:gravity="center_horizontal">

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="@dimen/abc_text_size_display_1_material"
                android:textAllCaps="false"
            android:onClick="handleNoteButtonClick"
            android:id="@+id/advancedButton7" />

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keys"
        android:id="@+id/advancedKeysButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="handleChooseKeysClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degrees"
        android:id="@+id/advancedDegreesButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="handleChooseDegreesClick" />

</RelativeLayout>
